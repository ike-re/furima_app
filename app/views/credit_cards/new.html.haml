.SignupCard
  .SignupCard__box
    .SignupCard__box__body
      %h2.SignupCard__box__body__title カード情報入力
      = form_with model: @credit_card, url: credit_cards_path, class: "SignupCard__box__body__input", method: :post, local: true do |f|
        .SignupCard__box__body__input__form
          .SignupCard__box__body__input__form__content
            %label.card__info カード番号
            %span.notify 必須
            %br
            = f.text_field :credit_card, class: "input", size: "16", placeholder: "半角数字のみ"
        .SignupCard__box__body__input__form
          .SignupCard__box__body__input__form__content
            %label.card__info 有効期限
            %span.notify 必須
            %br
            %select#exp_month{name: "exp_month", type: "text", class: "input_half"}
              %option{value: ""} -----
              %option{value: "1"}01
              %option{value: "2"}02
              %option{value: "3"}03
              %option{value: "4"}04
              %option{value: "5"}05
              %option{value: "6"}06
              %option{value: "7"}07
              %option{value: "8"}08
              %option{value: "9"}09
              %option{value: "10"}10
              %option{value: "11"}11
              %option{value: "12"}12
            %span 月
            %select#exp_year{name: "exp_year", type: "text",  class: "input_half"}
              %option{value: ""} -----
              %option{value: "2020"}20
              %option{value: "2021"}21
              %option{value: "2022"}22
              %option{value: "2023"}23
              %option{value: "2024"}24
              %option{value: "2025"}25
              %option{value: "2026"}26
              %option{value: "2027"}27
              %option{value: "2028"}28
              %option{value: "2029"}29
            %span 年
        .SignupCard__box__body__input__form
          .SignupCard__box__body__input__form__content
            %label.card__info セキュリティコード
            %span.notify 必須
            %br
            = text_field "cvc", "", class: "input", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
            #card_token
            = f.submit 'カードを登録する', class: "SignUp-btn", url: credit_cards_path