.LoginPages
  %header.Login-header
    = render "shared/header"
  %main.Login-main
    %section.Login-main__information
      %h2.Login-main__information__title
        ログイン
      .Login-main__information__form
        = form_with model: @user, url: user_session_path, local: true do |f|
          .Address
            = f.email_field :email, class:"Login__input", placeholder: "メールアドレス"
          .Password
            = f.password_field :password, class: "Login__input", placeholder: "パスワード"
          .Button
            = f.submit "ログイン", class: 'Login-btn'
          %h5.SignupToPage
            アカウントをお持ちでない方はこちら
          %button.SignupBtn
            = link_to "新規会員登録", new_user_registration_path,{class: "SignupBtn__btn"}
